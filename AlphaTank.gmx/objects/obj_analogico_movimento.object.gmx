          <argument>
            <kind>1</kind>
            <string>/// Movimento

if(device_mouse_check_button_pressed(dispositivo, mb_any)){    
    xClickInicial = device_mouse_raw_x(dispositivo);
    yClickInicial = device_mouse_raw_y(dispositivo);    
}



if(device_mouse_check_button(dispositivo, mb_any)){    
    isExibirAnalogico = true;
    
    // coordenadas da tela.
    var raw_x = device_mouse_raw_x(dispositivo);
    var raw_y = device_mouse_raw_y(dispositivo);
    
    // direção de acordo com os clicks iniciais.
    direcaoMovimento = point_direction(xClickInicial,yClickInicial,raw_x,raw_y);
    
    distanciaCentroBordas = point_distance(xClickInicial,yClickInicial,
                            raw_x,raw_y);
                
    if(distanciaCentroBordas &lt;= raioAnalogico){
        xFinalDeslocamentoAnalogico = xClickInicial + lengthdir_x(distanciaCentroBordas,direcaoMovimento);
        yFinalDeslocamentoAnalogico = yClickInicial + lengthdir_y(distanciaCentroBordas,direcaoMovimento);
    }else{
        xFinalDeslocamentoAnalogico = xClickInicial + lengthdir_x(raioAnalogico,direcaoMovimento);
        yFinalDeslocamentoAnalogico = yClickInicial + lengthdir_y(raioAnalogico,direcaoMovimento);
    }
    
}else{
    isExibirAnalogico = false;
    distanciaCentroBordas = 0;
}


if(distanciaCentroBordas != 0){
    isEmMovimento = true;
}else{
    isEmMovimento = false;
}
</string>
